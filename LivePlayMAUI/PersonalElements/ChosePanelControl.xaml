<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LivePlayMAUI.PersonalElements.ChoicePanelControl"
             Title="ChoicePanelControl">
    
    <Border BackgroundColor="#415A77" Margin="0,10,0,5" Grid.Row="0" StrokeThickness="0">
        <CollectionView Style="{StaticResource ChoseCollectionView}" ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border BackgroundColor="Transparent" Stroke="White" Margin="8,5" Padding="7,0" StrokeThickness="2">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20" />
                        </Border.StrokeShape>
                        <StackLayout Orientation="Horizontal">
                            <Image Source="{Binding Icon}" Margin="2"/>
                            <Label Text="{Binding Filter}" VerticalOptions="Center" Margin="2" FontSize="16" FontAttributes="Bold"/>
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Border>
    
</ContentPage>