<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LivePlayMAUI"
             xmlns:converters="clr-namespace:LivePlayMAUI.Resources.Converters"
             x:Class="LivePlayMAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="Colors" Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary x:Name="Styles" Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <converters:TupleConverter x:Key="TupleConverter" />
                    <converters:HeightConverter x:Key="HeightConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
