<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LivePlayMAUI.Pages.EnterPage"
             xmlns:pe="clr-namespace:LivePlayMAUI.PersonalElements"
             Appearing="ContentPage_Appearing" Disappearing="ContentPage_Disappearing"
             BackgroundColor="{AppThemeBinding Dark={StaticResource Page1BackgroundDark}, Light={StaticResource Page1BackgroundLight}}">

    <ScrollView x:Name="MainScrollView" VerticalScrollBarVisibility="Never">
        <Grid x:Name="MainGrid" >
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="62"/>
                <RowDefinition Height="140"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <pe:SwitchButtonsControl Grid.Row="1" TextButton1="Log in" TextButton2="Sign up" ClickButton1="SignUpButtonClicked" ClickButton2="LogInButtonClicked" Margin="40,0,40,0"/>

            <Grid x:Name="EnterGrid" Grid.Row="3" Margin="50,10">
                <StackLayout x:Name="LoginStackLayout" WidthRequest="300" Orientation="Vertical" >
                    <pe:SimpleEntryControl x:Name="LoginEmail" Placeholder="Логин" Text="{Binding Email}" Margin="10,10"/>
                    <pe:PasswordEntryControl x:Name="LoginPassword" Placeholder="Пароль" Text="{Binding Password}" Margin="10,10" />
                    <Button Text="Войти" Command="{Binding LoginUserCommand}" Margin="50,30"/>
                </StackLayout>

                <StackLayout x:Name="EmailStackLayout" WidthRequest="300" Orientation="Vertical" IsVisible="False">
                    <pe:SimpleEntryControl Placeholder="E-mail" Margin="10,10"/>
                    <Button Text="Далее" Clicked="EmailCheckButtonClicked" Margin="50,30"/>
                </StackLayout>

                <StackLayout x:Name="CodeStackLayout" WidthRequest="300" Orientation="Vertical" IsVisible="False">

                    <Grid ColumnDefinitions="*,*">
                        <Label Text="Введите код:" FontSize="16"/>
                        <Label x:Name="TimerLabel" Grid.Column="1" Text="00:00" Margin="10" VerticalOptions="Start" HorizontalOptions="End"/>
                    </Grid>

                    <Grid HeightRequest="84" ColumnDefinitions="*,*,*,*" ColumnSpacing="9" WidthRequest="240">
                        <Border Grid.ColumnSpan="4" Stroke="Transparent">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    Tapped="TapGestureRecognizer_Tapped"
                                    NumberOfTapsRequired="1"/>
                            </Border.GestureRecognizers>
                        </Border>
                        <Entry x:Name="EmailCode" Keyboard="Numeric" HeightRequest="0.1" BackgroundColor="Red"/>

                        <Border BackgroundColor="#415A77" Stroke="Transparent">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Label Text="0" FontAttributes="Bold" FontSize="45" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>

                        <Border Grid.Column="1" BackgroundColor="#415A77" Stroke="Transparent">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Label Text="5" FontAttributes="Bold" FontSize="45" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>

                        <Border Grid.Column="2" BackgroundColor="#415A77" Stroke="Transparent">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Label Text="8" FontAttributes="Bold" FontSize="45" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>

                        <Border Grid.Column="3" BackgroundColor="#415A77" Stroke="Transparent">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Label Text="3" FontAttributes="Bold" FontSize="45" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                    </Grid>
                    <Button x:Name="CodeCheckButton" Text="Далее" Clicked="CodeCheckButtonClicked" Margin="50,30"/>
                    <Button x:Name="SendCodeButton" Text="Отправить сообщение ещё раз" Clicked="SendCodeAgainButtonClicked" IsEnabled="False" Margin="10,30" Style="{StaticResource SecondButton}"/>
                </StackLayout>
            </Grid>
        </Grid>
    </ScrollView>
    
</ContentPage>
