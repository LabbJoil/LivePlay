<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LivePlay.Front.MAUI.Pages.UserPages.AccountPages.Views.PersonalQRPage"
             xmlns:cameraMAUI="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             Shell.TabBarIsVisible="False"
             Title="PersonalQRPage" Loaded="ContentPage_Loaded">

    <RefreshView IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshCommand}">
        <VerticalStackLayout Margin="15">
            <cameraMAUI:BarcodeImage
                x:Name="barcodeImage"
                WidthRequest="200" HeightRequest="200" 
                BarcodeWidth="200" BarcodeHeight="200" BarcodeMargin="1"
                BarcodeBackground="White"
                BarcodeFormat="QR_CODE" Barcode="111"/>

            <Label
                x:Name="DateUpdateLabel"
                Text="111"
                HorizontalOptions="CenterAndExpand"
                Margin="0,10"/>
        </VerticalStackLayout>
    </RefreshView>

</ContentPage>