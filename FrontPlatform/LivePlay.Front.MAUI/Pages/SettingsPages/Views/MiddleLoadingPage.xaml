<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LivePlay.Front.MAUI.Pages.SettingsPages.Views.MiddleLoadingPage"
             Title="MiddleLoadingPage"
             Loaded="ContentPage_Loaded"
             BackgroundColor="Transparent" Appearing="ContentPage_Appearing"
             Shell.NavBarIsVisible="False" Shell.TabBarIsVisible="False" Shell.PresentationMode="Modal">

    <Grid BackgroundColor="Transparent">
        <Rectangle x:Name="ShadowRectangle" Opacity="0.5" BackgroundColor="Black"/>
        <ActivityIndicator x:Name="LoadingAI" IsRunning="false" WidthRequest="50" HeightRequest="50"/>
    </Grid>
    
</ContentPage>